@{
    ViewData["Title"] = "Contact List";
}

@model List<Bowler>

<h1>Bowler Contact List</h1>

<button><a asp-controller="Home" asp-action="Create">Create new record</a></button>
<br />
<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Marlins">1 Marlins</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>First Name</td>
            <td>Middle</td>
            <td>Last Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip</td>
            <td>Phone Number</td>
            <td></td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.BowlerFirstName</td>
                <td>@x.BowlerMiddleInit</td>
                <td>@x.BowlerLastName</td>
                <td>@x.BowlerAddress</td>
                <td>@x.BowlerCity</td>
                <td>@x.BowlerState</td>
                <td>@x.BowlerZip</td>
                <td>@x.BowlerPhoneNumber</td>
                <td class="text-center">
                    <a class="btn btn-sm " asp-controller="Home" asp-action="Edit" asp-route-id="@x.BowlerID">Edit</a>
                </td>
                <td class="text-center">
                    <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.BowlerID">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>